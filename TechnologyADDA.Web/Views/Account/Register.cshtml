
@{
    Layout = null;
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
        <div class="content-wrapper d-flex align-items-center auth register-bg-1 theme-one" style="margin-top:0px;">
            <div class="w-100">
                <h2 class="text-center">Register</h2>
                <div class="row col-md-12 auto-form-wrapper" id="dvRegister">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="label">First Name<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtFirstName" placeholder="First Name" rule="{'Please enter First Name','required'}" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="mdi mdi-check-circle-outline"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Last Name<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtLastName" placeholder="Last Name" rule="{'Please enter Last Name','required'}" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="mdi mdi-check-circle-outline"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Email<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <input type="email" class="form-control" id="txtEmail" placeholder="Email" rule="{'Please enter Email','required'}" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="mdi mdi-check-circle-outline"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Mobile Number<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMobileNumber" placeholder="Mobile Number" rule="{'Please enter Mobile Number','required'}" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="mdi mdi-check-circle-outline"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="label">IT Experience<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtExperience" placeholder="IT Experience" rule="{'Please enter IT Experience','required'}" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="mdi mdi-check-circle-outline"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Choose Main Skill<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <select class="form-control" id="ddlMainSkill" rule="{'Please select Main Skill','required'}">
                                    <option>Select Main Skill</option>
                                    <option value="1">Dot Net</option>
                                    <option value="1">Others</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Choose Child Skill<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <select class="form-control" id="ddlChildSkill" rule="{'Please select Child Skill','required'}">
                                    <option>Select Child Skill</option>
                                    <option value="1">C#</option>
                                    <option>Asp.Net MVC</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="label">Choose Roles<span class="required-star"><b>*</b></span></label>
                            <div class="input-group">
                                <select class="form-control" id="ddlUserRoles" rule="{'Please select Role','required'}">
                                    <option>Select Role</option>
                                    <option value="1">Admin</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-center">
                            <div class="form-check form-check-flat mt-0">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" checked=""> I agree to the terms
                                    <i class="input-helper"></i>
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success submit-btn btn-block" onclick="saveUserAccount()">Register</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>