
<div class="card">
    <div class="row">
        <div class="card-body col-lg-4 mx-auto">
            <h2>Create Your Team</h2><br />
            <div class="form-group">
                <label>Member EmpId</label>
                <input type="text" class="form-control" id="txtMemberEmpId" onkeypress="return allowNumbers(event);" maxlength="10" placeholder="Member EmpId" autocomplete="off">
                <span id="errmsg"></span>
            </div>
            <div class="form-group">
                <label>Member Name</label>
                <input type="text" class="form-control" id="txtMemberName" maxlength="100" placeholder="Member Name" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Member Email</label>
                <input type="email" class="form-control" id="txtMemberEmail" maxlength="100" placeholder="Member Email" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-success mr-2" id="btnAddTeam">Add Team</button>
            <button class="btn btn-light">Cancel</button>
        </div>
        <div class="col-lg-1">
        </div>
        <div class="card-body col-lg-7 mx-auto">
            <h2>Team Members</h2><br />
            <div class="table-responsive">
                <table class="table table-hover table-bordered" id="tblTeamMembers">
                    <thead>
                        <tr>
                            <th> 
                                <div class="form-check form-check-flat">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input"> All
                                        <i class="input-helper"></i>
                                    </label>
                                </div>
                            </th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>EmpId</th>
                        </tr>
                    </thead>
                    <tbody id="appendTbody">
                        
                    </tbody>
                </table>
            </div>
            <br />
            <button type="submit" class="btn btn-success mr-2 float-right" data-toggle="modal" data-target="#exampleModalCenter">Create Team</button>
        </div>
    </div>
</div>
