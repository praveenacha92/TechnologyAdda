@model IEnumerable<TechnologyADDA.Models.MainSkill>
@{
    Layout = null;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Manage Main Skills</h2>
            <div class="table-responsive">
                <button type="submit" class="btn btn-info mr-2 float-right" onclick="addMainSkill()">+ New</button>
                <br />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Skill Name
                            </th>
                            <th>
                                Skill Description
                            </th>
                            <th>
                                Active
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.MainSkillName
                                </td>
                                <td>
                                    @item.MainSkillDesctiption
                                </td>
                                <td>
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="chkActive" checked="@item.Active">
                                        <i class="input-helper"></i>
                                    </label>
                                </td>
                                <td>
                                    <i class="menu-icon mdi mdi-pencil action-icon-size" onclick="editMainSkill(@item.Id)"></i>
                                    &nbsp;&nbsp;<i class="menu-icon mdi mdi-close-box action-icon-size" onclick="deleteConfirmMainSkill(@item.Id);"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
